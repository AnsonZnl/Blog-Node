extends index

block content
  div.content.main
    div.content-left
      - for(var i in posts){
        - var post = posts[i]
          include components/post-comment
      -}
    div.content-right
      if user
        div.ui.link.cards
          div.card
            div.image
              -if (user.avatar.substr(0,5) === 'https')
                img(src='#{user.avatar}')
              -else
                img(src='/images/#{user.avatar}')
            div.content
              div.header #{user.name}
              div.meta #{user.bio}
              div.description #{user.description}
            div.extra.content
              div.ui.buttons
                a.ui.basic.green.button(href='#{user.user_url}') Floow
          table.ui.celled.table
            thead
              tr
                th Responsities
                th Language
                th Star
            tbody#repos(author='#{user._id}')
