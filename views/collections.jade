extends index

block content
  div.content
    div.content-left
      - for(var i = 0;i<collections.length;i++){
        - var post = collections[i];
        div.article-item
          div.writer-front
            img(src='/images/#{post.author.avatar}')
          p.writer
            a(href='/posts?author=#{post.author._id}',data-title='#{post.author.name}',data-content='#{post.author.bio}')  #{post.author.name}
          div.article-content
              p.article-title
                a(href='/posts/#{post._id}') #{post.title}
              pre!=post.content
              div.article-about
                span.tag #{post.created_at}
                span.tag.right
                  span
                    img(src='/images/browse.svg')
                    span #{post.pv}
                  span
                    img(src='/images/comments.svg')
                    span #{post.commentsCount}
                  if user
                    span.favourite
                      img(src='/images/good.svg')
                      span 0
                    span.collect
                      a(class='addcollect',author='#{user._id}',post='#{post._id}')
                        img(src='/images/collect_success.svg')

                if user&&post.author._id&&user._id.toString()===post.author._id.toString()
                  div.writer-edit
                    button.item
                      a(href='/posts/#{post._id}/edit') 编辑
                    button.item
                      a(href='/posts/#{post._id}/remove') 删除
      -}
